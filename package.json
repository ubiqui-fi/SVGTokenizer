{
  "name": "svg_style_tokenizer_figma_plugin",
  "version": "1.1",
  "description": "SVG Style Tokenizer is a powerful Figma plugin that streamlines the process of exporting SVG assets while automatically converting colors into CSS variables. This ensures better maintainability, consistency, and easy theme customization in your web projects.",
  "main": "./dist/code.js",
  "ui": "./public/ui.html",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules src",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix src",
    "watch": "npm run build -- --watch",
    "cui": "tsc --project tsconfig.ui.json",
    "compile": "npm run build && npm run cui && cd compositor && npm run composite && cd .. && npx webpack"
  },
  "authors": [
    "Max Makaluk",
    "Jonah Kowal"
  ],
  "license": "",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@types/node": "^22.13.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "typescript": "^5.3.2",
    "webpack-cli": "^6.0.1"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "svgo": "^4.0.0"
  }
}
